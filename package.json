{
  "private": true,
  "name": "designbits",
  "description": "",
  "license": "",
  "scripts": {
    "prepare": "husky install",
    "postinstall": "remix setup node && yarn run install:dotenv-linter",
    "dev": "concurrently -n \"TailwindCSS,Remix Dev\"  -c \"#bef264.bold,#10b981.bold\" \"yarn run dev:css\" \"remix dev\"",
    "dev:css": "tailwindcss -o ./app/styles/tailwind.css --watch",
    "dev:remix": "remix dev",
    "build": "yarn run build:css && remix build",
    "build:css": "tailwindcss -o ./app/styles/tailwind.css",
    "start": "remix-serve build",
    "connect:databases": "concurrently -c \"#10b981.bold,#bada55.bold\" \"yarn:connect:database:*\"",
    "connect:database:develop": "pscale connect designbits develop --port ${DATABASE_PORT:-3309}",
    "connect:database:shadow": "pscale connect designbits shadow --port ${SHADOW_DATABASE_PORT:-3310}",
    "lint": "eslint --fix --cache --cache-location ./node_modules/.cache/.eslintcache --ext js,jsx,ts,tsx .",
    "lint:staged": "eslint --fix --no-error-on-unmatched-pattern --cache --cache-location ./node_modules/.cache/.eslintcache",
    "typecheck": "concurrently --raw yarn:typecheck:*",
    "typecheck:app": "tsc --noEmit",
    "install:dotenv-linter": "curl -sSfL https://raw.githubusercontent.com/dotenv-linter/dotenv-linter/master/install.sh | sh -s",
    "prisma:create-migration": "npx prisma migrate dev",
    "prisma:reset-database": "npx prisma migrate reset",
    "prisma:generate": "npx prisma generate && npx prettier --write prisma/zod"
  },
  "dependencies": {
    "@headlessui/react": "^1.4.2",
    "@heroicons/react": "^1.0.5",
    "@prisma/client": "^3.7.0",
    "@remix-run/react": "^1.1.1",
    "@remix-run/serve": "^1.1.1",
    "@remix-run/vercel": "^1.1.1",
    "bcrypt": "^5.0.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "remix": "^1.1.1",
    "zod": "^3.11.6"
  },
  "prisma": {
    "seed": "node --require esbuild-register prisma/seed.ts"
  },
  "devDependencies": {
    "@remix-run/dev": "^1.1.1",
    "@tailwindcss/forms": "^0.4.0",
    "@types/bcrypt": "^5.0.0",
    "@types/react": "^17.0.38",
    "@types/react-dom": "^17.0.11",
    "@typescript-eslint/eslint-plugin": "^4.33.0",
    "@typescript-eslint/parser": "^4.33.0",
    "concurrently": "^6.4.0",
    "dotenv-run-script": "^0.2.0",
    "esbuild-register": "^3.3.1",
    "eslint": "^7.32.0",
    "eslint-config-kentcdodds": "^19.2.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-import-resolver-typescript": "^2.5.0",
    "eslint-plugin-file-progress": "^1.2.0",
    "eslint-plugin-import": "^2.25.3",
    "eslint-plugin-jsx-a11y": "^6.5.1",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-react": "^7.27.1",
    "eslint-plugin-react-hooks": "^4.3.0",
    "husky": "^7.0.4",
    "lint-staged": "^12.1.4",
    "prettier": "^2.5.1",
    "prisma": "^3.7.0",
    "rollup": "^2.61.1",
    "tailwindcss": "^3.0.8",
    "type-fest": "^2.8.0",
    "typescript": "4.5.4",
    "zod-prisma": "git+https://github.com/tirthGajjar/zod-prisma.git"
  },
  "engines": {
    "node": ">=14"
  },
  "sideEffects": false
}