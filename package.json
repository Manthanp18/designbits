{
  "private": true,
  "name": "designbits",
  "version": "0.0.1",
  "description": "",
  "license": "",
  "scripts": {
    "prepare": "husky install",
    "postinstall": "remix setup node && yarn run install:dotenv-linter",
    "dev": "concurrently -n \"Database,TailwindCSS,Remix Dev\"  -c \"#bada55.bold,#0284c7.bold,#10b981.bold\" \"yarn connect:database:develop\" \"yarn dev:css\" \"remix dev\"",
    "dev:css": "tailwindcss -o ./src/app/styles/tailwind.css --watch",
    "dev:remix": "remix dev",
    "build": "yarn prisma:generate && yarn run build:css && remix build",
    "build:css": "tailwindcss -o ./src/app/styles/tailwind.css",
    "start": "remix-serve build",
    "connect:databases": "concurrently -c \"#10b981.bold,#bada55.bold\" \"yarn:connect:database:*\"",
    "connect:database:develop": "pscale connect designbits develop --port ${DATABASE_PORT:-3309}",
    "connect:database:shadow": "pscale connect designbits shadow --port ${SHADOW_DATABASE_PORT:-3310}",
    "connect:database:main": "pscale connect designbits main --port ${SHADOW_DATABASE_PORT:-3306}",
    "lint": "eslint --fix --cache --cache-location ./node_modules/.cache/.eslintcache --ext js,jsx,ts,tsx .",
    "lint:staged": "eslint --fix --no-error-on-unmatched-pattern --cache --cache-location ./node_modules/.cache/.eslintcache",
    "typecheck": "concurrently --raw yarn:typecheck:*",
    "typecheck:app": "tsc --noEmit",
    "install:dotenv-linter": "curl -sSfL https://raw.githubusercontent.com/dotenv-linter/dotenv-linter/master/install.sh | sh -s -- -b node_modules/.bin",
    "prisma:create-migration": "npx prisma migrate dev",
    "prisma:reset-db": "npx prisma migrate reset",
    "prisma:generate": "npx prisma generate && npx prettier --write **/prisma/zod",
    "prisma:reset-db:skip-upload": "SKIP_UPLOAD=true yarn prisma:reset-db",
    "vercel:env:push": "bash scripts/env.sh"
  },
  "prisma": {
    "schema": "src/prisma/schema.prisma",
    "seed": "node --require esbuild-register src/prisma/seed.ts"
  },
  "dependencies": {
    "@headlessui/react": "^1.4.3",
    "@heroicons/react": "^1.0.5",
    "@prisma/client": "^3.9.0",
    "@reach/auto-id": "^0.16.0",
    "@remix-run/react": "^1.1.3",
    "@remix-run/serve": "^1.1.3",
    "@remix-run/vercel": "^1.1.3",
    "@sendgrid/mail": "^7.6.0",
    "aws-sdk": "^2.1066.0",
    "chalk": "^4.1.2",
    "clsx": "^1.1.1",
    "framer-motion": "^6.2.3",
    "hast-util-to-string": "^2.0.0",
    "lodash.groupby": "^4.6.0",
    "lodash.isequal": "^4.5.0",
    "md5-hash": "^1.0.1",
    "p-props": "^5.0.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "rehype-document": "^6.0.1",
    "rehype-format": "^4.0.1",
    "rehype-parse": "^8.0.3",
    "rehype-stringify": "^9.0.2",
    "remix": "^1.1.3",
    "remix-auth": "^3.2.1",
    "remix-auth-google": "^1.1.0",
    "spin-delay": "^1.1.0",
    "tiny-invariant": "^1.2.0",
    "zod": "^3.11.6"
  },
  "devDependencies": {
    "@babel/core": "^7.16.12",
    "@babel/eslint-parser": "^7.16.5",
    "@remix-run/dev": "^1.1.3",
    "@remix-run/eslint-config": "^1.1.3",
    "@tailwindcss/forms": "^0.4.0",
    "@types/lodash.groupby": "^4.6.6",
    "@types/lodash.isequal": "^4.5.5",
    "@types/react": "^17.0.38",
    "@types/react-dom": "^17.0.11",
    "@typescript-eslint/eslint-plugin": "^5.10.2",
    "@typescript-eslint/parser": "^5.10.2",
    "concurrently": "^7.0.0",
    "esbuild-register": "^3.3.2",
    "eslint": "^8.8.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-file-progress": "^1.2.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-tailwindcss": "^3.4.3",
    "husky": "^7.0.4",
    "lint-staged": "^12.3.3",
    "prettier": "^2.5.1",
    "prisma": "^3.9.0",
    "rollup-plugin-copy": "^3.4.0",
    "tailwindcss": "^3.0.18",
    "type-fest": "^2.11.1",
    "typescript": "4.5.5",
    "zod-prisma": "git+https://github.com/tirthGajjar/zod-prisma.git"
  },
  "engines": {
    "node": ">=14"
  },
  "sideEffects": false
}