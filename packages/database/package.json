{
  "name": "database",
  "version": "0.0.1",
  "main": "index.ts",
  "types": "index.ts",
  "sideEffects": false,
  "private": true,
  "license": "MIT",
  "scripts": {
    "prisma:create-migration": "npx prisma migrate dev",
    "prisma:reset-database": "npx prisma migrate reset",
    "prisma:generate": "npx prisma generate",
    "dev": "concurrently -n \"Databases,build:watch\"  -c \"#bada55.bold,#10b981.bold\"  \"yarn connect:databases\" \"npx prisma generate\"",
    "build": "npx prisma generate",
    "reset": "npx prisma migrate reset",
    "reset:skip-upload": "SKIP_UPLOAD=true yarn reset",
    "connect:databases": "concurrently -c \"#10b981.bold,#bada55.bold\" \"yarn:connect:database:*\"",
    "connect:database:develop": "pscale connect designbits develop --port ${DATABASE_PORT:-3309}",
    "connect:database:shadow": "pscale connect designbits shadow --port ${SHADOW_DATABASE_PORT:-3310}",
    "connect:database:main": "pscale connect designbits main --port ${SHADOW_DATABASE_PORT:-3306}"
  },
  "files": [
    "dist/**"
  ],
  "prisma": {
    "schema": "prisma/schema.prisma",
    "seed": "node --require esbuild-register prisma/seed.ts"
  },
  "dependencies": {
    "@prisma/client": "^3.9.0",
    "prisma": "^3.9.0"
  },
  "devDependencies": {
    "@rollup/plugin-typescript": "^8.3.0",
    "@types/react": "^17.0.37",
    "@types/react-dom": "^17.0.11",
    "concurrently": "^6.4.0",
    "config": "*",
    "esbuild-register": "^3.3.1",
    "tsconfig": "*",
    "tsup": "^5.11.12",
    "typescript": "^4.5.3",
    "zod-prisma": "git+https://github.com/tirthGajjar/zod-prisma.git"
  }
}