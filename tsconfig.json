{
  "include": [
    "remix.env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "src/app/types/editor.d.ts"
  ],
  "compilerOptions": {
    "lib": ["DOM", "DOM.Iterable", "ES2019"],
    "esModuleInterop": true,
    "jsx": "react-jsx",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "strict": true,
    "module": "es2020",
    "target": "es2020",
    "skipLibCheck": true,
    "paths": {
      "~/*": ["./src/app/*"]
    },
    // Remix takes care of building everything in `remix build`.
    "noEmit": true
  }
}
